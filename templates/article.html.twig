{% embed 'blog.html.twig' %}

{% block main %}
<div class="container content black">
    <h1>
        <svg viewBox="-2 -2 102 30">
          <path id="title-curve" d="M0,23.65 C31.35,11.1,64.95,3,100,0"/>
          <path class="curve" d="M0,25.65 C31.35,13.1,64.95,5,100,2"/>
          <text>
            <textPath xlink:href="#title-curve">{{ page.title}}</textPath>
          </text>
        </svg>
    </h1>
    {{ page.content }}

    {% if page.taxonomy.tag %}
    <ul class="tags">
        <span>Tags :</span>
        {% for tag in page.taxonomy.tag %}
        <li>
            <a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag }}</a>
        </li>
        {% endfor %}
    </ul>
    {% endif %}
</div>
{% endblock %}

{% endembed %}
